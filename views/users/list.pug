extends ../layout

block content
    button(class="btn btn-default glyphicon glyphicon-plus", role='group')
    //- h1(class="icon-pistol-icon") #{title}
    //- h1= title
    each user in users
        div(class="centralized row")
            div(class="col-md-5 col-md-offset-4 user-item")
                //- h4(class="icon-#{user.brand.toLowerCase()}-logo")
                div(class='btn-group user-btns-box', role='group')
                    form(action="http://localhost:1234/users/modify",method="POST")
                        input(type="hidden", name='_id', value=user._id)
                        button(class="btn btn-default glyphicon glyphicon-pencil", role='group')
                    form(action="http://localhost:1234/users/remove",method="POST")
                        input(type="hidden", name='_id', id='_id', value=user._id)
                        button(class="btn btn-default glyphicon glyphicon-trash", role='group')

                ul(class="centralized list-unstyled")
                    li #[span(class="list-values") #{user._id}]
                        hr
                    li Created: #[span(class="list-values") #{user.created}]
                    li Name: #[span(class="list-values") #{user.name.first} #{user.name.last}]
                    li E-mail: #[span(class="list-values") #{user.email}]
                    li Age: #[span(class="list-values") #{user.age}]
                    li Skills:
                        ul
                            each skill in user.skills
                                li
                                    span(class="list-values") #{skill}
                    li Logins:
                        ul
                            each login in user.logins
                                li
                                    span(class="list-values") #{login.at} #{login.minutes}
