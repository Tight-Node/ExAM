extends ../layout

block content
    //- h1(class="icon-pistol-icon") #{title}
    h1 #{title}
    each user in users
        div(class="centralized row")
            div(class="col-md-4 col-md-offset-4 user-item")
                //- h4(class="icon-#{user.brand.toLowerCase()}-logo")
                h4
                    //- a(class="btn btn-primary glyphicon glyphicon-zoom-in")
                    //- a(class="btn btn-warning glyphicon glyphicon-cog")
                ul(class="centralized list-unstyled")
                    li #[span(class="list-values") #{user._id}]
                        hr
                    li Brand: #[span(class="list-values") #{user.brand}]
                    li Category: #[span(class="list-values") #{user.category}]
                    li Color: #[span(class="list-values") #{user.color}]
                    li Motor: #[span(class="list-values") #{user.motor}]
                    li Optionals:
                        ul
                            each optional in user.optionals
                                li
                                    span(class="list-values") #{optional}
