extends ../layout

block content
  h1(class="icon-pistol-icon") #{title}
  each gun in guns
    div(class="centralized row")
      div(class="col-md-4 col-md-offset-4 gun-item")
        h4(class="icon-#{gun.brand.toLowerCase()}-logo")
          a(class="btn btn-primary glyphicon glyphicon-zoom-in")
          a(class="btn btn-warning glyphicon glyphicon-cog")
        ul(class="centralized list-unstyled")
          li #[span(class="list-values") #{gun._id}]
            hr
          li Brand: #[span(class="list-values") #{gun.brand}]
          li Category: #[span(class="list-values") #{gun.category}]
          li Serie: #[span(class="list-values") #{gun.serie}]
          li Caliber: #[span(class="list-values") #{gun.caliber}]
          li Ammos:
            ul
              each ammo in gun.ammos
                li
                  span(class="list-values") #{ammo}
